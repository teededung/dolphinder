---
import MainLayout from "../components/MainLayout.astro";
import OAuthButton from "../components/shared/OAuthButton";
import { createSupabaseServerClient } from "../lib/supabase/serverClient";
import { getCurrentUser, getDeveloperProfile } from "../lib/auth";

export const prerender = false;

// Check if already logged in
const supabase = createSupabaseServerClient(Astro.cookies as any);
const user = await getCurrentUser(supabase);

if (user) {
  // Check if user has a developer profile
  const developer = await getDeveloperProfile(supabase, user.id);

  if (developer) {
    // User has profile, redirect to dashboard
    return Astro.redirect("/dashboard");
  }
  // User is logged in but no profile yet - allow them to stay on this page
  // This will show the OAuth button which will create their profile
}
---

<MainLayout title="Register">
  <div class="min-h-screen pt-20">
    <div class="container mx-auto px-4 py-8">
      <div class="mx-auto max-w-md">
        <div class="bg-card rounded-lg border p-8 shadow-lg">
          <div class="mb-6 text-center">
            <h1 class="text-3xl font-bold">
              {user ? "Complete Your Profile" : "Join Dolphinder"}
            </h1>
            <p class="text-muted-foreground mt-2">
              {
                user
                  ? "Connect your GitHub account to create your profile"
                  : "Connect with developers in the Sui ecosystem"
              }
            </p>
          </div>

          {
            user && (
              <div class="mb-4 rounded-md bg-yellow-50 p-4 text-sm text-yellow-800">
                <p class="font-semibold">Profile Setup Required</p>
                <p class="mt-1">
                  You're logged in as {user.email}, but your profile hasn't been
                  created yet. Click the button below to complete your
                  registration.
                </p>
              </div>
            )
          }

          <OAuthButton client:load />

          <div class="bg-muted mt-6 rounded-md p-4 text-sm">
            <p class="text-muted-foreground">
              We use GitHub to verify your identity and automatically populate
              your profile with your public information. Your profile will be
              reviewed by our team before being made public.
            </p>
          </div>

          {
            !user && (
              <div class="text-muted-foreground mt-6 text-center text-sm">
                Already have an account?
                <a href="/login" class="text-primary hover:underline">
                  {" "}
                  Sign in{" "}
                </a>
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div>
</MainLayout>
