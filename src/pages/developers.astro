---
import MainLayout from "../components/MainLayout.astro";
import DevelopersFilter from "../components/DevelopersFilter";
import { createSupabaseServerClient } from "../lib/supabase/serverClient";
import { getVerifiedDevelopers } from "../lib/auth";

export const prerender = false;

// Get verified developers from Supabase database
const supabase = createSupabaseServerClient(Astro.cookies as any);
const dbDevelopers = await getVerifiedDevelopers(supabase);

// Map database developers to display format
const developers = dbDevelopers.map(dev => ({
  name: dev.name,
  username: dev.username,
  avatar: dev.avatar || "",
  bio: dev.bio || "",
  github: dev.github || "",
  linkedin: dev.linkedin || "",
  telegram: dev.telegram || "",
  website: dev.website || "",
  slushWallet: dev.slush_wallet || "",
  entry: dev.entry || "",
  projects: dev.projects || [],
  certificates: dev.certificates || [],
  walrusBlobId: dev.walrus_blob_id || null,
}));
---

<MainLayout title="Developers - Dolphinder">
  <div class="min-h-screen pt-20">
    <div class="container mx-auto px-4 py-8">
      <!-- Header -->
      <div class="mb-12 text-center">
        <h1 class="my-4 text-4xl font-bold md:text-5xl">
          Welcome to Dolphinder Nation
        </h1>
        <p class="mb-2 text-xl text-white/80">
          The onchain developer directory & showcases
        </p>
        <p class="text-white/60">
          {developers.length} talented developers and counting...
        </p>
      </div>

      <!-- Developers Filter Component -->
      <DevelopersFilter developers={developers} client:load />
    </div>
  </div>
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
