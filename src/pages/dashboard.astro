---
import MainLayout from '../components/MainLayout.astro';
import DashboardClient from '../components/onchain/DashboardClient.tsx';

export const prerender = false;

const username = Astro.url.searchParams.get('username') ?? '';
---

<MainLayout title="Dashboard - On-chain Profile">
  <div class="min-h-screen pt-16">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-6">Dashboard</h1>
      <p class="opacity-70 mb-4">Cập nhật hồ sơ, thêm dự án và chứng chỉ của bạn on-chain.</p>

      {username ? (
        <DashboardClient client:only="react" username={username} />
      ) : (
        <div class="rounded-xl border border-white/10 bg-white/5 p-6">
          <p>Hãy thêm query <code>?username=yourname</code> vào URL để bắt đầu.</p>
        </div>
      )}
    </div>
  </div>
</MainLayout>


